+int
+ParseTagValues(char *list, char *letters[], char *values[])
+{
+	char           *t, *ptr, *key;
+	int             i;
+
+	/*- start with all args unset */
+	for (i = 0; letters[i]; i++)
+		values[i] = 0;
+	key = 0;
+	for(ptr = list;*ptr;) {
+		if ((*ptr == ' ') || (*ptr == '\t') || (*ptr == '\r') || (*ptr == '\n')) /*- FWS */
+			*ptr++ = 0;
+		if (!key)
+			key = ptr;
+		if (*ptr == '=') {
+			*ptr = 0;
+			for (i = 0;letters[i];i++) {
+				if (!str_diff(letters[i], key)) {
+					ptr++;
+					for (;*ptr;) {
+						if ((*ptr == ' ') || (*ptr == '\t') || (*ptr == '\r') || (*ptr == '\n')) {
+							ptr++;
+							continue;
+						}
+						break;
+					}
+					values[i] = ptr;
+					for(;*ptr && *ptr != ';';ptr++);
+					t = ptr;
+					if (*ptr)
+						*ptr++ = 0;
+					for(;t != values[i];t--) { /*- RFC 4871 3.2 */
+						if ((*t == ' ') || (*t == '\t') || (*t == '\r') || (*t == '\n')) {
+							*t = 0;
+							continue;
+						}
+						break;
+					}
+					key = 0;
+					break;
+				}
+			}
+		} else
+			ptr++;
+	}
+	return (0);
+}
